<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            font-family: sans-serif;
            text-align: center;
        }
        table{
            border: 2px solid black;
        }
    </style>
</head>
<body>
  
    <h1 >URL SHORTNER</h1>
    <div>
        <form action="/api/v1/url" method="POST">
            <label for="">Enter Redirecting Url:-</label>
            <input type="text" name="url" id="">
            <button type="submit">Generate</button>
        </form>
    </div>
    <% if (locals.url) { %>
        <p>
           <h2> Url Generated Successfully</h2>
           <%= url.shortId %>
        </p>
       <% } %>

       <% if (locals.urls) { %>
        <div>
            <table>
                <thead>
                    <th>Sr.No</th>
                    <th>Redirecting-URL</th>
                    <th>Short-URL</th>
                    <th>VisitHistory</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>
                     <td>
                        <%= index + 1 %>
                     </td>
                     <td>
                        <%= url.redirectURL %>
                     </td>
                     <td>
                        <%= url.shortId %>
                     </td>
                     <td>
                        <%= url.visitHistory.length %>
                     </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
           </div>
       <% } %>
    
</body>
</html>